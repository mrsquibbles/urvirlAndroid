<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- This is the styling for action bar -->
        <item name="actionBarTheme">@style/urvirlAction.ActionBarTheme</item>
        <item name="actionBarStyle">@style/urvirlActionBar</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="urvirlActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/purple</item>
        <item name="titleTextStyle">@style/urvirlActionBarTitle</item>
    </style>

    <style name="urvirlActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="urvirlAction.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>